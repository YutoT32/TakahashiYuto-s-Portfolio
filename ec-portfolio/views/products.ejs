<!DOCTYPE html>
<html lang="ja">
    <head>
        <meta charset="utf-8"/>
        <title>TakahashiYuto's Portfolio</title>
        <link rel="stylesheet" href="/public/css/style.css"/>
    </head>
    <body>
        <header>
            <!-- ナビゲーションリンクをnavタグでグループ化 -->
            <nav class="header-nav" role="navigation" aria-label="global navigation">
                <div class="logo">
                <a href="/">TakahashiYuto's Portfolio</a>
                </div>
                <div class="nav-items">
                <a href="/index">一覧</a>
                <a href="/cart">カート</a>
                <a href="/login">ログイン</a>
                </div>
            </nav>

        </header>
        <div class="container">
        <!-- asideタグでサイドバーを明確化 -->
            <aside class="sidebar" role="complementary" aria-label="category list">
                <h3>カテゴリー </h3>

                <!-- JavascriptのforEachでcategoriesを表示 -->
                <% const categories = [
                    {id: 1, name: 'Tシャツ'}, 
                    {id: 2, name: 'ワイシャツ'}, 
                    {id: 3, name: 'ズボン'}
                ]; %>
                <ul>
                    <% categories.forEach((category) => { %>
                        <li><%= category.name %></li>
                    <% }); %>
                </ul>
            </aside>

        <!-- メインコンテンツ -->
            <main role="main">
                <h2>商品一覧</h2>

                <!-- JavascriptのforEachでProductsを表示 -->
                <% products.forEach(p => { %>
                    <article class="card">
                        <div class="card-body">
                            <h2 class="card-title"><%= p.name %></h2>
                            <p class="muted"><%= p.description || "" %></p>
                        </div>
                        <div class="card-footer">
                            <div>¥<%= p.price %></div>
                            <div class="<%= p.stock > 0 ? 'ok' : 'ng' %>">stock: <%= p.stock %></div>
                        </div>
                    </article>
                <% }) %>

            </main>
        </div>

        <footer>
            <p>&copy; 2026 Yuto Takahashi All Rights Reserved.</p>
        </footer>
    </body>
</html>